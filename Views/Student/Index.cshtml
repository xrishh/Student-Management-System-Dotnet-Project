@model IEnumerable<StudentManagementSystem.Models.Student>

<h2>Student List</h2>

<p>
    <a href="/Student/Create" class="btn btn-primary">Add New Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.Email</td>
            <td>@student.Department</td>
            <td>
                <a href="/Student/Delete/@student.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
